<%= simple_form_for(@query) do |f| %>
  <% if @query.errors.any? %>
    <div class="alert alert-error alert-block">
      <button type="button" class="close" data-dismiss="alert">&#215;</button>
        <h4><%= pluralize(@query.errors.count, "error") %> prohibited this query from being saved:</h4>
        <ul>
          <% @query.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :place_name, required: true %>
  </div>
  <div class="field">
    <%= f.input :price_min %>
  </div>
  <div class="field">
    <%= f.input :price_max %>
  </div>
  <div class="field">
    <%= f.input :bedroom_min %>
  </div>
  <div class="field">
    <%= f.input :bedroom_max %>
  </div>
  <div class="actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>

<% end %>
