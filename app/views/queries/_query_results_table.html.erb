<div class="container">
    <% @res['response']['listings'].each do |listing| %>
        <div class="well">
            <h4><%= listing['title'] %> -- Price: Â£<%= listing['price'] %></h4>
            <p><%= listing['summary'] %></p>
            <div class="row-fluid">
                <div class="span2">
                    <img src="<%= listing['img_url'] %>"/>
                </div>
                <div class="span8">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <td>Price</td>
                                <td>Bedrooms</td>
                                <td>Bathrooms</td>
                                <td>Car Spaces</td>
                                <td>Keywords</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= listing['price_formatted'] %></td>
                                <td><%= format(listing['bedroom_number']) %></td>
                                <td><%= format(listing['bathroom_number']) %></td>
                                <td><%= format(listing['car_spaces']) %></td>
                                <td><%= listing['keywords'] %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% end %>
</div>